<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Layout_Activity1"
    android:background="#7972ee"
    >





    <ImageView

        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/seta" />

    <EditText
        android:id="@+id/edtnmome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/person"
        android:hint="User Name"
        android:textColorHint="#fff"
        android:inputType="textPersonName"
        android:padding="20sp"
        />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColorHint="#fff"
        android:drawableEnd="@drawable/lock"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="80"
        android:padding="20sp"


        />    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:drawableEnd="@drawable/email"
        android:hint="E-mail"
        android:textColorHint="#fff"
        android:inputType="textEmailAddress"
        android:padding="20sp"
        />

    <EditText
        android:id="@+id/edtphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:textColorHint="#fff"
        android:drawableEnd="@drawable/phone"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="80"
        android:padding="20sp"


        />
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
        android:text="Allow Term & Conditions"
        android:textColor="#fff"/>





        <Button

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:text="Sign in"
            android:textAllCaps="true"

            />



    <TextView
        android:id="@+id/txtSemconta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:text="DontÂ´ have account?"
        android:layout_marginTop="20dp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:text="Sign up"
        android:textSize="20dp"
        android:textColor="#fff"/>
    <ImageView
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:src="@drawable/setadois"
        android:layout_gravity="right"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="20dp"
        />



</LinearLayout>